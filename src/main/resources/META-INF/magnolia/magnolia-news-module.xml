<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
    <name>magnolia-news-module</name>
    <displayName>${project.name}</displayName>
    <description>${project.description}</description>
    <versionHandler>nl.tricode.magnolia.news.setup.NewsModuleVersionHandler</versionHandler>
    <version>${project.version}</version>

    <components>
        <id>main</id>
        <component>
            <type>info.magnolia.cms.exchange.Syndicator</type>
            <implementation>info.magnolia.module.activation.SimpleSyndicator</implementation>
        </component>
    </components>

    <dependencies>
        <dependency>
            <name>core</name>
            <version>5.4/*</version>
        </dependency>
        <dependency>
            <name>ui-admincentral</name>
            <version>5.4/*</version>
        </dependency>
        <dependency>
            <name>scheduler</name>
            <version>2.2/*</version>
        </dependency>
        <dependency>
            <name>contacts</name>
            <version>1.0/*</version>
        </dependency>
        <dependency>
            <name>tricode-categories</name>
            <version>1.0/*</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <name>tricode-tags</name>
            <version>1.0/*</version>
            <optional>true</optional>
        </dependency>
    </dependencies>


    <repositories>
        <repository>
            <name>magnolia</name>
            <workspaces>
                <workspace>collaboration</workspace>
            </workspaces>
            <nodeTypeFile>/mgnl-nodetypes/tricode-news-nodetypes.xml</nodeTypeFile>
        </repository>
    </repositories>
</module>